<div class="bk-calendar">

    <div class="row bk-header"><!-- @ws
        --><div class="col-sm-8 bk-header-title"><h2>{{title}}</h2></div><!-- @ws
        --><div class="col-sm-4 text-right bk-header-controls"><!-- @ws
            --><div class="btn-group">
                <button class="btn btn-sm btn-default" {{action 'prev'}}><i class="fa fa-chevron-left"></i></button>
                <button {{bind-attr class=":btn :btn-sm :btn-default isPresentView:active"}} {{action 'today'}}>today</button>
                <button class="btn btn-sm btn-default" {{action 'next'}}><i class="fa fa-chevron-right"></i></button>
            </div><!-- @ws
        --></div>
    </div>

    <div class="bk-daynames clearfix">
        <div>Mon.</div>
        <div>Tue.</div>
        <div>Wed.</div>
        <div>Thu.</div>
        <div>Fri.</div>
        <div>Sat.</div>
        <div>Sun.</div>
    </div>
    <div class="bk-surface clearfix">
    {{#each row in rows}}
        {{ember-cal-week
            row=row
            curyear=curyear
            curmonth=curmonth
            color=color
            textcolor=textcolor
            eventClicked='eventClicked'
            dateClicked='dateClicked'}}
    {{/each}}
    </div>
</div>